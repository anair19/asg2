<style type="text/css">
    li {
        display: inline-block;
        
    }
    #delete {
        color:red;
    }
</style>
<h3>To delete a book, click on the X button</h3>
<% books.forEach(s=>
    { %>
        <ul>
            <li><a href="<%= `/books/${s._id}/delete?_method=DELETE` %>" id="delete"
            onclick = "return confirm ('Are you sure you want to delete a book?')">X</a></li>
        

        <li><a href="/books/<%=s.book %>"> <p>
            <%= s.name %>
        </p></a></li>
        </ul>
    <% });
%>

